{
  "compilerOptions": {
    "target": "esnext",  
    "module": "esnext", 
    "moduleResolution": "node",                   
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@packages/*": ["packages/*"]
    },     
    "allowJs": true,  
    "checkJs": true,  
    "outDir": "./dist",  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "skipLibCheck": true                     
  },
  "exclude": [
    "node_modules",
    "bin",
    "cypress",
    "doc",
    "lib",
    "types",
    "dist",
    "vite.config*"
  ]
}
